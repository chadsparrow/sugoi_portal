version: "3"

# Setup Node.js container / MondoDB containers

## Need to add Subnet info - confirm with Jordin

services:
  server:
    build: ./server
    container_name: sugoi_portal
    command: npm run dev
	# gitlab url is url to server image registry 
    image: registry.gitlab.com/garneau-dev/sugoi/custom-proofs/server
    restart: always
	# pulls port for node app from env file
    ports:
  ## This needs to change to available web server ports - confirm with Jordin/Jonathan
      - "${PORT}:${PORT}"
	# creates volumes to persist data and install node modules  - may not need node_modules one for server (mac only?)
    volumes:
      - ./server:/usr/src/app
      - /usr/src/app/node_modules
    depends_on:
      - mongo
    links:
      - mongo
	# filename for env file (eg .env  see .env.example)
    env_file:
      - env file
  mongo:
    container_name: mongo
    restart: always
    image: mongo
	#mongodb always on 27017
    ports:
  ## This needs to change to available web server ports - confirm with Jordin/Jonathan
      - "27017:27017"
	# volume linked to persist data from database
    volumes:
      - mongodbdata:/data/db
	# set to env files variables
	  environment:
      - MONGO_INITDB_ROOT_USERNAME=${MONGO_INITDB_ROOT_USERNAME}
      - MONGO_INITDB_ROOT_PASSWORD=${MONGO_INITDB_ROOT_PASSWORD}
    command: mongod --auth
# docker volume created for database, name must match mongo volumes section
volumes:
  mongodbdata:
