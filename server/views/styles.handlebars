<p>Search for any text in style numbers, style names, or brand:</p>
<input class="form-control input-sm" id="myInput" type="text" placeholder="Search..">
<br>

<table class="table table-sm table-hover">
  <thead>
    <tr>
      <th scope="col">LG Style #</th>
      <th scope="col">Old Style #</th>
      <th scope="col">Style Name</th>
      <th scope="col">Brand</th>
      <th scope="col">Sizes</th>
      <th scope="col" class="head-center">FLUO</th>
      <th scope="col" class="head-center">PRS</th>
    </tr>
  </thead>
  <tbody id="myTable">
    {{#each styles}}
    <tr>
      <td>{{LGstyleNum}}</td>
      <td>{{styleNum}}</td>
      <td>{{styleName}}</td>
      <td>{{brand}}</td>
      <td>{{#each sizing}}<span class="badge badge-secondary mr-1">{{this}}</span>{{/each}}</td>
      {{#if fluo}}
      <td class="center"><i class="fas fas fa-check-circle fa-lg"></i></td>
      {{else}}
      <td></td>
      {{/if}}
      {{#if personalized}}
      <td class="center"><i class="fas fas fa-check-circle fa-lg"></i></td>
      {{else}}
      <td></td>
      {{/if}}
      {{!-- {{#if active}}
      <td></td>
      {{else}}
      <td class="table-danger">No</td>
      {{/if}} --}}
    </tr>
    {{/each}}

  </tbody>
</table>

<script>
  $(document).ready(function () {
    $("#myInput").on("keyup", function () {
      var value = $(this).val().toLowerCase();
      $("#myTable tr").filter(function () {
        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
      });
    });
  });
</script>