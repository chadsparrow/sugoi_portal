<div class="container">
  <section class="section center">
    <div class="container">
      <div class="row">
        <div class="col s12">
          <div class="card black">
            <div class="card-content white-text">
              <span class="card-title">Password Change</span>
              <div class="card-action">
                <div class="row">
                  <form action="/users/password?_method=PUT" method="post" class="col s12">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="input-field col s12">
                      <input type="text" name="username" id="username" class="white-text" readonly value="{{user.username}}">
                      <label for="username"><i class="fas fa-envelope-square"></i> Username:</label>
                    </div>
                    <div class="input-field col s12">
                      <input type="password" name="password" id="password" placeholder="enter new password" autofocus class="white-text validate"
                        required>
                      <label for="password"><i class="fas fa-key"></i> Password:</label>
                    </div>
                    <div class="input-field col s12">
                      <input type="password" name="password2" id="password2" placeholder="confirm password" class="white-text validate">
                      <label for="password2" required><i class="fas fa-key"></i> Confirm Password:</label>
                    </div>
                    <button class="btn waves-effect waves-light" type="submit" name="action" style="margin-right: 10px;"><i
                        class="
                    fas fa-check-square"></i>
                      Submit
                    </button>
                    <a href="javascript:history.back()" id="cancel" name="cancel" class="btn waves-effect waves-light red"><i
                        class="fas fa-times"></i>
                      Cancel</a>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>