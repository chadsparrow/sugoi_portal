<section class="section center">
  <div class="container">
    <div class="row">
      <div class="col s12">
        <div class="card black">
          <div class="card-content white-text">
            <span class="card-title">Account Login</span>
            <div class="card-action">
              <div class="row">
                <form action="/users/password?_method=PUT" method="post" class="col s12">
                  <input type="hidden" name="_method" value="PUT">
                  <div class="input-field col s12">
                    <input type="email" name="username" class="white-text" readonly value="{{user.username}}">
                    <label for="username"><i class="fas fa-envelope-square"></i> Email:</label>
                  </div>
                  <div class="input-field col s12">
                    <input type="password" name="password" placeholder="enter new password" autofocus class="white-text validate">
                    <label for="password"><i class="fas fa-key"></i> Password:</label>
                  </div>
                  <button class="btn waves-effect waves-light black-text" type="submit" name="action"><i class="fas fa-check-square"></i>
                    Submit
                  </button>
                  <a href="/orders" id="cancel" name="cancel" class="btn waves-effect waves-light red black-text"><i
                      class="fas fa-times"></i> Cancel</a>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>