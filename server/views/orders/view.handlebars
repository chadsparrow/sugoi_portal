<div class="row">
  <div class="col s12 l3" style="padding: 15px;">
    <div class="card black white-text" style="font-size: 14px;">
      <div class="card-content">
        <div class="row">
          <div class="col s12">
            <span class="card-title">Order Details - {{order.orderNum}}</span>
          </div>
          <div class="divider"></div>
          <div class="col s12">
            <span class="grey-text">Client: </span>{{order.client}}
          </div>
          <div class="col s12">
            <span class="grey-text">Entered: </span>{{formatDate order.requestDate "MMM Do YYYY"}}
          </div>
          <div class="col s12">
            <span class="grey-text">Event Date: </span>{{formatDate order.eventDate "MMM Do YYYY"}}
          </div>
          <div class="col s12">
            <span class="grey-text">Needed In-Hand: </span>{{formatDate order.latestInHand "MMM Do YYYY"}}
          </div>
          {{#if user}}
          <div class="col s12">
            <br>
            <span class="grey-text">Current Artist: </span>{{order.currentArtist}}
          </div>
          <div class="col s12 center-align">
            <br>
            <span class="grey-text">Order History</span>
          </div>
          <div class="col s12 instructionsBox center-align">
            <div class="collection black-text left-align">
              {{#each (getInstructions order.instructions)}}
              <div class="collection-item">
                <small class="black-text">{{this.instructionType}} - {{formatDate this.date "MMMM Do YYYY"}} -
                  {{this.user}}</small>
                <br>
                {{this.instruction}}
              </div>
              {{/each}}
            </div>
          </div>
          {{/if}}
        </div>
      </div>
      <div class="card-action center-align">
        <div class="row">
          <div class="col s12">
            {{{setStatusDiv order.currentStatus}}}
          </div>
        </div>

      </div>
    </div>
  </div>
