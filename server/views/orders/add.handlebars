<section class="section center">
  <div class="container">
    <div class="row">
      <div class="card col s12">
        <div class="card-content">
          <span class="card-title">Add Order</span>
          <div class="card-action">
            <form action="/orders/add" method="POST">
              <span>
                <small>* required fields</small>
              </span>
              <br>
              <br>
              <div class="row">
                <div class="col s12 m6">
                  <div class="row">
                    <div class="input-field col s12 m6">
                      <input type="text" name="orderNum" pattern="[0-9]{7}" maxlength="7" value="{{orderNum}}"
                        placeholder="enter 7 digit number" class="validate" required autofocus>
                      <label for="orderNum">* Order #:</label>
                    </div>
                    <div class="input-field col s12 m6">
                      <select name="priority">
                        {{#select priority}}
                        <option value=""></option>
                        <option value="RUSH">RUSH</option>
                        <option value="VIP">VIP</option>
                        {{/select}}
                      </select>
                      <label for="priority">Priority:</label>
                    </div>
                    <div class="input-field col s12">
                      <select name="currentStatus">
                        {{#select currentStatus}}
                        <option value="1. Waiting for Proof" selected>Waiting for Proof</option>
                        <option value="2. Proof Started">Proof Started</option>
                        <option value="3. Proof - Waiting on Someone else">Proof - Waiting on Someone else</option>
                        <option value="4. Proof Ready for QC">Proof Ready for QC</option>
                        <option value="5. Proof QC Complete">Proof QC Complete</option>
                        <option value="6. Proof Complete">Proof Complete</option>
                        <option value="7. Waiting for Revision">Waiting for Revision</option>
                        <option value="8. Revision - Waiting on Someone else">Revision - Waiting on Someone else</option>
                        <option value="9. Revision Started">Revision Started</option>
                        <option value="10. Revision Ready for QC">Revision Ready for QC</option>\
                        <option value="11. Revision QC Complete">Revision QC Complete</option>
                        <option value="12. Revision Complete">Revision Complete</option>
                        <option value="13. Waiting for Output">Waiting for Output</option>
                        <option value="14. Output - Waiting on Someone else">Output - Waiting on Someone else</option>
                        <option value="15. Output Started">Output Started</option>
                        <option value="16. Output Ready for QC">Output Ready for QC</option>
                        <option value="17. Output QC Complete">Output QC Complete</option>
                        <option value="18. Waiting for PNT">Waiting for PNT</option>
                        <option value="19. PNT Ready for QC">PNT Ready for QC</option>
                        <option value="20. PNT QC Complete">PNT QC Complete</option>
                        <option value="21. Uploaded">Uploaded</option>
                        <option value="22. Sent to Vendor">Sent to Vendor</option>
                        <option value="23. CANCELLED">CANCELLED</option>
                        {{/select}}
                      </select>
                      <label for="currentStatus">* Status:</label>
                    </div>
                    <div class="input-field col s12 m6">
                      <input type="text" class="datepicker" name="eventDate">
                      <label for="eventDate">Event Date:</label>
                    </div>
                    <div class="input-field col s12 m6">
                      <input type="text" class="datepicker" name="latestInHand">
                      <label for="latestInHand">Latest In-Hand Date:</label>
                    </div>
                    <div class="input-field col s12">
                      <select name="isr">
                        {{#select isr}}
                        <option value="Adam">Adam</option>
                        <option value="Dean">Dean</option>
                        <option value="Reed">Reed</option>
                        <option value="Sheila">Sheila</option>
                        {{/select}}
                      </select>
                      <label for="isr">* ISR:</label>
                    </div>
                    <div class="input-field col s12">
                      <input type="text" name="client" placeholder="enter client name" class="validate" value="{{client}}"
                        required>
                      <label for="client">* Client:</label>
                    </div>
                  </div>

                </div>
                <div class="col s12 m6">
                  <div class="input-field col s12">
                    <i class="material-icons prefix">mode_edit</i>
                    <textarea name="instruction" class="materialize-textarea" placeholder="type instructions here...">{{#each instruction}}{{@last}}:{{this}}{{/each}}</textarea>
                    <label for="instruction">Initial Instructions:</label>
                  </div>
                </div>
                <div class="col s12">
                  <button class="btn waves-effect waves-light" type="submit" name="action" style="margin-right: 10px;"><i
                      class="fas fa-check-square"></i>
                    Submit
                  </button>
                  <a href="/orders" id="cancel" name="cancel" class="btn waves-effect waves-light red"><i class="fas fa-times"></i>
                    Cancel</a>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>