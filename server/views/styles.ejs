<!DOCTYPE html>
<html lang="en">

<head>
  <% include ./partials/_head.ejs %>
</head>

<body>
  <% include ./partials/_navbar.ejs %>
  <div class="container">
    <p>Search for any text in style numbers, style names, or brand:</p>
    <input class="form-control input-sm" id="myInput" type="text" placeholder="Search..">
    <br>

    <table class="table table-sm table-hover">
      <thead>
        <tr>
          <th scope="col">LG Style #</th>
          <th scope="col">Old Style #</th>
          <th scope="col">Style Name</th>
          <th scope="col">Brand</th>
          <th scope="col">Sizes</th>
          <th scope="col" class="head-center">FLUO</th>
          <th scope="col" class="head-center">PRS</th>
        </tr>
      </thead>
      <tbody id="myTable">
        <% styles.forEach(function (style){ %>
        <tr>
          <td>
            <%= style.LGstyleNum %>
          </td>
          <td>
            <%= style.styleNum %>
          </td>
          <td>
            <%= style.styleName %>
          </td>
          <td>
            <%= style.brand %>
          </td>
          <td>
            <% style.sizing.forEach(function (sizes){ %><span class="badge badge-secondary mr-1">
              <%= sizes %></span>
            <% }); %>
          </td>
          <% if (style.fluo) { %>
          <td class="center"><i class="fas fas fa-check-circle fa-lg"></i></td>
          <% } else { %>
          <td></td>
          <% } %>
          <% if (style.personalized){ %>
          <td class="center"><i class="fas fas fa-check-circle fa-lg"></i></td>
          <% } else { %>
          <td></td>
          <% } %>
        </tr>
        <% }); %>

      </tbody>
    </table>
  </div>


  <% include ./partials/_scripts.ejs %>
  <script>
    $(document).ready(function () {
      $("#myInput").on("keyup", function () {
        var value = $(this).val().toLowerCase();
        $("#myTable tr").filter(function () {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
        });
      });
    });
  </script>
</body>

</html>