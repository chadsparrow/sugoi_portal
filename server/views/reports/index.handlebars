<div class="container" style="margin-top: 20px; margin-bottom: 50px;">
  <h5 class='center-align'>Custom Order Reports</h5>
  <div class="input-field col s4">
    <select>
      {{#each reports}}
      <option value="{{reportWeekNumber}}">{{reportWeekRange}}</option>
      {{/each}}
    </select>
    <label>Select Week</label>
  </div>
  <div class="chart"></div>
</div>


<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script>
  var options = {
    chart: {
      height: 500,
      type: 'bar',
      stacked: true
    },
    plotOptions: {
      bar: {
        distributed: true
      }
    },
    series: [{
      data: [{{ reports.0.proofsCompleted }}, {{ reports.0.revisionsCompleted }}, {{ reports.0.outputCompleted }}]
    }],
  xaxis: { categories: ["Proofs", "Revisions", "Output"] }
  }

  var chart = new ApexCharts(document.querySelector(".chart"), options);

  chart.render();
</script>