<div class="container" style="margin-top: 20px; margin-bottom: 50px;">
  <h5 class='center-align'>Custom Order Reports</h5>
  <!-- Dropdown Trigger -->
  <a class='dropdown-trigger btn' href='#' data-target='weekSelector' style="width: 225px;">Select Week</a>

  <!-- Dropdown Structure -->
  <ul id='weekSelector' class='dropdown-content'>
    {{#each reports}}
    <li><a href="#!" style="font-size: 12px;" class="center-align">{{reportWeekRange}}</a></li>
    {{/each}}
  </ul>
  <hr>
  <div id="chart"></div>
</div>

<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script>
  var options = {
    chart: {
      height: 500,
      type: 'bar',
      stacked: true
    },
    plotOptions: {
      bar: {
        distributed: true
      }
    },
    series: [{
      data: [{{ reports.0.proofsCompleted }}, {{ reports.0.revisionsCompleted }}, {{ reports.0.outputCompleted }}]
    }],
  xaxis: { categories: ["Proofs", "Revisions", "Output"] }
  }

  var chart = new ApexCharts(document.querySelector("#chart"), options);

  chart.render();
</script>