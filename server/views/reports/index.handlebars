<div class="container row" style="margin-top: 20px; margin-bottom: 50px;">
  <h5 class='center-align'>Custom Order Reports</h5>
    <div class="input-field col s6">
      <select onchange="location = this.options[this.selectedIndex].value;">
      {{#each reports}}
       <option value="/reports/week/{{reportWeekNumber}}">{{reportWeekRange}}</option>
      {{/each}}
      </select>
     <label>Select Week</label>
    </div>
  <div class="chart"></div>
</div>


<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script>
  var options = {
    chart: {
      height: 500,
      type: 'bar',
      stacked: true
    },
    
    plotOptions: {
      bar: {
        distributed: true
      }
    },
    series: [
      {
        name: 'Completed',
        data: [{{report.proofsCompleted}}, {{report.revisionsCompleted}}, {{report.outputCompleted}}]
      },
      {
        name: 'Avg. Turn-Around (Days)',
        data: [{{ report.avgProofs }}, {{ report.avgRevisions }}, {{ report.avgOutput }}]
      }
    ],
    xaxis: { categories: ["Proofs", "Revisions", "Output"] }
  }

  var chart = new ApexCharts(document.querySelector(".chart"), options);

  chart.render();
  
</script>