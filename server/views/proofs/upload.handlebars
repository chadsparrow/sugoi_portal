<div class="main-loader">
  <div class="preloader-wrapper big active">
    <div class="spinner-layer spinner-blue-only">
      <div class="circle-clipper left">
        <div class="circle"></div>
      </div>
      <div class="gap-patch">
        <div class="circle"></div>
      </div>
      <div class="circle-clipper right">
        <div class="circle"></div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="container">
    <h3>Zip Upload</h3>
    <form action="/proofs/upload" method="POST" enctype="multipart/form-data">
      <div class="file-field input-field">
        <div class="btn grey">
          <span>File</span>
          <input name="ziptoUpload" type="file" accept=".zip">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text" placeholder="choose zip file">
        </div>
      </div>
      <button type="submit" class="btn" onclick="showLoader()">Upload</button>
    </form>
  </div>
</div>

<script>
  $(document).ready(function () {
    $('.main-loader').css('display', 'none');
  });

  function showLoader() {
    $('.main-loader').css('display', 'block');
  }
</script>